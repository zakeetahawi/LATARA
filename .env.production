# Debug mode should be disabled in production
DEBUG=0

# Enable SSL security features
ENABLE_SSL_SECURITY=true

# Set allowed hosts (comma-separated) - update with your Railway app URL
ALLOWED_HOSTS=*.up.railway.app,localhost,127.0.0.1

# Database configuration - these will be overridden by Railway's DATABASE_URL
# No need to set these manually as Railway will provide DATABASE_URL
# DB_NAME=railway
# DB_USER=postgres
# DB_PASSWORD=password
# DB_HOST=host
# DB_PORT=5432

# Secret key (will be set by Railway environment variable)
# SECRET_KEY=your-secure-secret-key

# Redis URL (if using Redis)
# REDIS_URL will be provided by Railway if you add Redis service

# Internationalization settings
LANGUAGE_CODE=ar
TIME_ZONE=Africa/Cairo
USE_I18N=True
USE_TZ=True